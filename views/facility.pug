      h1.page-title=title

      .fac-content

         .fac-list
            ul 
               li 
                  a(href='/facility/1') Art Hall 1
               li 
                  a(href='/facility/2') Art Hall 2
               li 
                  a(href='/facility/3') Design Museum
               li 
                  a(href='/facility/4') Design Exhibition Hall
               li 
                  a(href='/facility/5') Designers Lounge
               li 
                  a(href='/facility/6') Design Shop
               li 
                  a(href='/facility/7') Oullim Square
               li 
                  a(href='/facility/8') Dongdaemun History Museum
               li 
                  a(href='/facility/9') Yigansumun Exhibition Hall
               li 
