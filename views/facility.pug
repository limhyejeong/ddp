         .fac-acc
            .fac-description 
               h2=facilityName

               .fac-slide 
                  input(type="radio" name="slide" id="slide01" check)
                  input(type="radio" name="slide" id="slide02")
                  input(type="radio" name="slide" id="slide03")

                  .slidewrap 
                     ul.slidelist 
                        li 
                           a
                              label(for="slide03").left
                              img(src=`../images/facility/${num}_03.jpg`, alt="")
                              label(for="slide02").right

                        li 
                           a
                              label(for="slide01").left
                              img(src=`../images/facility/${num}_01.jpg`, alt="")
                              label(for="slide03").right

                        li 
                           a
                              label(for="slide02").left
                              img(src=`../images/facility/${num}_02.jpg`, alt="")
                              label(for="slide01").right


                  p=description
            
         